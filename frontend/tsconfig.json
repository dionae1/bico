{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "isolatedModules": true,
        "allowJs": true,
        "checkJs": false,
        "baseUrl": ".",
        "strictNullChecks": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "vite.config.*",
        "index.html"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}